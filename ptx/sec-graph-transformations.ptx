    <!-- OG version example 2 -->
    <example>
      <statement>
        <p>
          <ol>
            <li> If <m>f(x)=x^2</m> and <m>g(x)=2x^2+5</m>, express <m>g(x)</m> in terms of <m>f</m>.</li>
            <li> If <m>f(x)=x^2</m> and <m>h(x)=(x+5)^2-3</m>, express <m>h(x)</m> in terms of <m>f</m>.</li>
          </ol>
        </p>
      </statement>
      <answer>
        <p>
          <ol>
            <li><m>g(x)=2f(x)+5</m>.</li>
            <li><m>h(x)=f(x+5)-3</m>.</li>
          </ol>
        </p>
      </answer>
    </example>
